@using FarmaciaAvellaneda.ViewModels
@model IEnumerable<FarmaciaAvellaneda.Models.Concepto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1 class="display-3 p-3 d-flex justify-content-center">Listado de conceptos</h1>

<p>
    <a class="btn btn-success btn-outline-info text-white" asp-action="Create">Crear nuevo concepto</a>
</p>
<div class="table-responsive bg-gradient-white shadow-sm rounded">

    <table class="table table-hover p-2">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Monto)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.Raw(item.Tipo == Tipos.Deduccion.GetHashCode() ? Tipos.Deduccion.ToString() : Tipos.Haber.ToString())
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td nowrap="nowrap">
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Modificar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
