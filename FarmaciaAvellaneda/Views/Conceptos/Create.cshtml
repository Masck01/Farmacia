@*@model FarmaciaAvellaneda.Models.Concepto*@
@using FarmaciaAvellaneda.ViewModels
@model FarmaciaAvellaneda.ViewModels.ConceptoViewModel
@{
    ViewData["Title"] = "Crear Concepto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 p-2">Nuevo Concepto</h1>

<h4>Detalles</h4>
<hr />
<div class="d-flex flex-column flex-grow-1 p-2">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="bg-dark text-danger"></div>
        <div class="form-group">
            <div class="input-group">

                <div class="input-group-prepend">

                    <label asp-for="Descripcion" class="control-label input-group-text"></label>
                </div>
                <input asp-for="Descripcion" class="form-control" />
            </div>
            <span asp-validation-for="Descripcion" class="bg-dark text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <label asp-for="Tipo" class="control-label input-group-text"></label>
                </div>
                <select class="form-group custom-select" asp-for="Tipo" asp-items="@Html.GetEnumSelectList<Tipos>()"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <label asp-for="Monto" class="control-label input-group-text"></label>
                </div>
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input asp-for="Monto" class="form-control" value="0" />
            </div>
            <span asp-validation-for="Monto" class="bg-dark text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <label asp-for="Unidad" class="control-label input-group-text"></label>
                </div>
                <div class="input-group-prepend">
                    <span class="input-group-text">%</span>
                </div>
                <input asp-for="Unidad" class="form-control" />
            </div>
            <span asp-validation-for="Unidad" class="bg-dark text-danger"></span>
        </div>
        <div>
            <div class="form-group form-check">
                <label asp-for="Exento" class="control-label">
                    <input class="form-check-input" asp-for="Exento" checked />
                    @Html.DisplayNameFor(m => m.Exento)
                </label>
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <input type="submit" value="Crear concepto" class="mt-4 w-50 btn btn-primary" />
        </div>
    </form>
</div>
<a class="d-flex align-self-start btn btn-danger btn-outline-dark mb-2" asp-action="Index">Volver a la lista</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
