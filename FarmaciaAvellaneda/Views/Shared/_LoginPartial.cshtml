@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="nav nav-pills nav-sidebar flex-column">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="fa fa-user-circle"></i>
                <p>Hello @User.Identity.Name!</p>
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline btn nav-link text-left" asp-area="Identity" id='form' asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a class="text-white" onclick="document.getElementById('form').submit()">
                    <i class="fas fa-sign-out-alt"></i>
                    <p>Logout</p>
                </a>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-user-check"></i>
                <p>Login</p>
            </a>
        </li>
    }
</ul>
