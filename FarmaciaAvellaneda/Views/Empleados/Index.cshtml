@model IEnumerable<FarmaciaAvellaneda.Models.Empleado>

@{
    ViewData["Title"] = "Lista empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container d-flex flex-column bg-gradient-cyan text-gray-dark mt-4 mb-4 rounded shadow">

    <h1 class="display-3 p-3 d-flex justify-content-center">Lista de empleados</h1>

    <p>
        <a class="btn btn-success btn-outline-info text-white" asp-action="Create">Crear neuvo empleado</a>
    </p>
    <div class="table-responsive bg-gradient-white shadow-sm rounded">

    <table class="table table-hover p-2">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cuit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Domicilio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cuit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Domicilio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td i-user="@item.UserId">
                    </td>
                    <td nowrap="nowrap">
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Modificar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>